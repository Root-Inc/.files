# ¬ Emerge Aliases

alias emrgaqv="sudo emerge -aqv"
alias emrgsync="sudo emerge --sync"
alias emrgpkg="sudo emerge --ask --buildpkg" # Installs a package from binary
alias qp="sudo quickpkg"

